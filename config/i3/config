# finds out, if available)

bar {
	colors {
		background #330000
		statusline #ffffff

		focused_workspace  #222222 #a00909 #ffffff
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #222222
		urgent_workspace   #ffffff #ffaa00
	}
        status_command i3status
}
